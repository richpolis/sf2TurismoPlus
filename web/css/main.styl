transition()
	-webkit-transition arguments
	-moz-transition arguments
	-ms-transition arguments
	-o-transition arguments
	transition arguments

box-sizing()
	-webkit-box-sizing arguments
	-moz-box-sizing arguments
	box-sizing arguments

border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	-ms-border-radius arguments
	-o-border-radius arguments
	border-radius arguments

box-shadow()
	-webkit-box-shadow arguments
	-moz-box-shadow arguments
	-ms-box-shadow arguments
	-o-box-shadow arguments
	box-shadow arguments

transform()
	-webkit-transform arguments
	-moz-transform arguments
	-ms-transform arguments
	-o-transform arguments
	transform arguments

opacity(n)
	opacity n
	if support-for-ie
		filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

a:hover
	text-decoration none

body
	font-size 16px
	background-color white
	font-family 'Conv_ProximaNova-Semibold'
	
.container
	margin 0 auto
	text-align center
	max-width 1023px
	padding 0

header
	position relative
	& div.menu-principal
		border-bottom 1px dotted black
		overflow hidden
		& #logo
		& nav.menu-principal
			display inline-block
		& #logo
			left 0px
			top 10px
			position absolute
		& nav.menu
			font-size 25px
			float right
			color black
			text-transform uppercase
			text-align left
			& ul
				text-align right
				padding 0px
				margin 0px
				& li
					display inline-block
					list-style none
					padding 30px 5px 30px 30px
					& a
						color #4c4c4c
	& div.menu-secundario
		border-bottom 1px dotted black
		text-align center
		margin-bottom 0px
		transition all .5s ease
		height 0px
		min-height 0px
		opacity 0%
		visibility hidden
		position relative
		& ul
			padding 0
			margin-top 10px
			& li 
				list-style none
				display inline-block
				& a 
					display block
					background-color #e74c3c
					color white
					font-size 16px
					border-radius 10px
					padding 5px 10px
					text-transform capitalize
					margin 5px
					transition all .5s ease
					opacity 0%
					text-decoration none
					font-family 'Conv_Museo500-Regular'
				& a:hover
				& a.active
					background-color #919191
		& .flechita
			position absolute
			display block
			top 5px
			right 5px
			width 20px
			height 12px
			background url('../images/keyarts/closecategorias.png') no-repeat
			cursor pointer 		
	& div.menu-secundario.active
		height 100px
		min-height 100px
		opacity 100%
		visibility visible
		margin-bottom 10px
		& a
			opacity 100%
					
section
	& article.encabezado
		text-align left
		margin-top 10px
		& .slider1
			position relative
			width 638px
			min-height 369px
			margin 0 auto 40px
			& .slide
				position absolute
				top 0px
				left 0px
				width 638px
				height 369px
				margin 0px
				& img
					position absolute
					top 0px
					left 0px
					border-radius 3px
				& .slide-titulo
					position absolute
					z-index 1000
					min-width 400px
					min-height 50px
					top -50px
					left 0px
					font-size 41px
					background-color black
					color white
					text-transform uppercase
					text-align left
					padding 0px 5px
					opacity 0.8
					transition all 1s ease
				& .slide-descripcion
					background-color black
					bottom -115px
					color white
					height 115px
					font-size 16px
					opacity 0.8
					text-align left
					transition all 1s ease
					right 0px
					padding 10px 125px 10px 10px
					position absolute
					line-height 150%
					width 100%
					z-index 1000
					& span.slide-descripcion-boton
						background url('/images/keyarts/botoncarrouselopen.png') no-repeat
						bottom 0px
						cursor pointer
						display block
						height 115px
						right 0px
						position absolute
						width 115px
			& .slide:hover
				& .slide-descripcion
					bottom 0px
			& .active
				& .slide-titulo
					top 0px
	& article.publicaciones
		margin-top 16px
		text-align left
		min-height 100px
		position relative
		& .publicacion
			float left
			margin 16px 7px
			width 240px
			& .publicacion-thumbnail
				background-position center center
				background-repeat no-repeat
				background-size cover
				max-width 100%
				cursor pointer
				transition opacity .5s ease
				border-radius 3px
			& .publicacion-thumbnail:hover
				opacity 0.8
			& .publicacion-titulo
				position relative
				font-size 16px
				text-transform uppercase
				border-bottom 1px dotted black
				padding 0px 0px 30px 0px
				text-weigth bold
				font-family 'Conv_ProximaNova-Semibold'
				cursor pointer
				& span.publicacion-fecha
					position absolute
					bottom 5px
					left 0px
					font-size 12px
					font-family 'Conv_FUTURAL'
				& span.publicacion-categoria
					position absolute
					bottom 5px
					right 0px
					font-size 12px
					font-family 'Conv_FUTURAL'
			& .publicacion-descorta
				padding 0px 0px 10px 0px
				border-bottom 1px dotted black
				font-family 'Conv_FUTURAL'
				font-size 12px
				color #575757
	& article.single-article
		text-align left
		overflow hidden
		& > header
			width 100%
			border-bottom 1px solid #d7d7d7
			& h2
				font-size 33px
				text-transform uppercase
				font-family 'Conv_ProximaNova-Semibold'
			& p
				font-family 'Conv_ProximaNova-Semibold'
				font-size 25px
			& .fecha-publicacion
				font-family 'Conv_ProximaNova-Semibold'
				color #575757
				font-size 25px
		& .contenido
			overflow hidden
			border-bottom 1px dotted black
			& ul 
				& li
					list-style none
			& .usuario
				border-bottom 1px solid #d7d7d7
				padding 20px 0px 30px
				overflow hidden
				font-family 'Conv_FUTURAL'
				& .foto-usuario
				& .datos-usuario
					display inline-block
					vertical-align top
				& .foto-usuario
					float left
					width 150px
					text-align center
					& img
						border-radius 50%
				& .datos-usuario
					float right
					position relative
					width 150px
					& .datos-usuario-username
						display block
						font-size 16px
						color #575757
					& .twitter-usuario
					& .facebook-usuario
						display inline-block
						vertical-align top
						font-size 12px
			& .redes-sociales
				border-bottom 1px solid #d7d7d7
				padding 20px 0px 30px
				text-align center
				width 300px
				& h3
					font-size 25px
					font-family 'Conv_ProximaNova-Semibold'
				& .logo-facebook
				& .logo-twitter
					margin 0px 20px
					& a:hover
						text-decoration none
			& .visitas
				padding 20px 0px
				text-align center
				& .logo-visitas
				& span.visitas
					display inline-block
					width 49%
				& span.visitas
					font-family 'Conv_FUTURAL'
					color #9c9c9c
					font-size 25px
			& .galeria
				float right
		& .contenido-principal
			margin 20px 0px

footer
	border-top 1px dotted black
	border-bottom none
	text-align left
	width 100%
	overflow hidden
	& .redes-sociales
		padding 20px 0px 30px
		text-align center
		width 300px
		float left
		& h3
			font-size 18px
			font-family 'Conv_ProximaNova-Semibold'
		& .logo-facebook
		& .logo-twitter
			margin 0px 20px
			& a:hover
				text-decoration none
	& .fb-comments
		float right
		margin-top 20px
	

#formulario_contacto
	background-color white
	text-align left
	padding 40px
	width 400px
	position absolute
	left 50%
	top 20px
	margin-left -200px
	border-radius 20px
	z-index 9999


.publicacion
	&.w1
		& .publicacion-thumbnail
			height 369px
	&.w2
		& .publicacion-thumbnail
			height 300px
	&.w3
		& .publicacion-thumbnail
			height 200px


