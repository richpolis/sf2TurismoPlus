{# list usuarios #}
{% raw %}
<script type="text/template" id="table_template">
<!-- Table -->
<div class="row">
    <div class="col-md-12">
        <div class="widget">
            <div class="widget-head">
                <div class="pull-left">Registro de Publicaciones</div>
                <div class="clearfix"></div>
            </div>
            <div class="widget-content">
                <table id="datatable" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titulo</th>
                            <th>Descripcion Corta</th>
                            <th>Visitas</th>
                            <th>Activo?</th>
                            <th>Carrusel?</th>
                            <th>Usuario</th>
                            <th>Categoria</th>
                            <th>Creaci√≥n</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="cuerpoTabla">
                       
                    </tbody>
                </table>
                <div class="widget-foot">
                    <br><br>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>
</script>

<script type="text/template" id="item_table_template">
    <td>{{ id }}</td>
    <td>{{ titulo }}</td>
    <td>{{ descripcionCorta|raw }}</td>
    <td>{{ visitas }}</td>
    <td>
    {% if isActive %}
        <i class="fa fa-check-circle"></i>
    {% else %}
        <i class="fa fa-circle"></i>
    {% endif %}
    </td>
    <td>
    {% if inCarrusel %}
        <i class="fa fa-check-circle"></i>
    {% else %}
        <i class="fa fa-circle"></i>
    {% endif %}
    </td>
    <td>{{ usuario.username }}</td>
    <td>{{ categoria.nombre }}</td>
    <td>{{ created_at|date('d/m/Y') }}</td>
    <td class="acciones">
        <a href="#edit/{{id}}" class="btn btn-xs btn-warning">
            <i class="fa fa-pencil"></i> 
        </a>
        <a href="#show/{{id}}" class="btn btn-xs btn-info">
            <i class="fa fa-folder-open"></i>
        </a>
    </td>
</script> 

{% endraw %}