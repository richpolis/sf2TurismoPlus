{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Galeria list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>Thumbnail</th>
                <th>Archivo</th>
                <th>Tipoarchivo</th>
                <th>Position</th>
                <th>Isactive</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('galerias_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.thumbnail }}</td>
                <td>{{ entity.archivo }}</td>
                <td>{{ entity.tipoArchivo }}</td>
                <td>{{ entity.position }}</td>
                <td>{{ entity.isActive }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('galerias_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('galerias_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('galerias_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
