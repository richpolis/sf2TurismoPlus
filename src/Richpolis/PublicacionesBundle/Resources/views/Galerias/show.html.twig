{# show usuario #}
{% raw %}
<script type="text/template" id="show_template">
    <div class="row">
        <div class="col-md-12">
            <div class="widget">
                <div class="widget-head">
                    <div class="pull-left">{{nombre}}</div>
                    <div class="clearfix"></div>
                </div>

                <div class="widget-content">
                    <div class="padd">
                        <table>
                            <tr>
                                <td>Id:</td>
                                <td>{{id}}</td>
                            </tr>
                            <tr>
                                <td>Thumbnail:</td>
                                <td>
                                    <span class="title">
                                        {{titulo}}
                                    </span>
                                    <br/>
                                    <img src="{{webPathThumbnail}}" style="max-width: 120px;"/>
                                    <br/>
                                    <span class="descripcion">
                                    {{ descripcion|raw }}
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>Archivo:</td>
                                <td>
                                   {{ archivoView|raw }}
                                </td>
                            </tr>
                            <tr>
                                <td>Tipo:</td>
                                <td>{{stringTipo}}</td>
                            </tr>
                            <tr>
                                <td>Publicacion:</td>
                                <td>{{publicacion.titulo}}</td>
                            </tr>
                            <tr>
                                <td>Posicion:</td>
                                <td>{{position}}</td>
                            </tr>
                            <tr>
                                <td>Activo?:</td>
                                <td>
                                    {% if is_active %}
                                        <i class="fa fa-check-circle"></i>
                                    {% else %}
                                        <i class="fa fa-circle"></i>
                                    {% endif %}
                                </td>
                            </tr>
                        </table>    
                    </div>
                </div>
                <div class="widget-foot">
                    <button id="botonRegresar" class="btn btn-default">Regresar</button>
                    <div style="float: left; margin-right: 3px;">
                        <button id="botonEliminar" class="btn btn-danger">Eliminar</button>
                    </div>        
                </div>
            </div>  
        </div>    
    </div>
</script>
{% endraw %}