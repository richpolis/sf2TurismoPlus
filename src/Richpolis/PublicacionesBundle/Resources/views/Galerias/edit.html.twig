{# editar usuario #}
<div class="row">
    <div class="col-md-12">
        <div class="widget">
            <div class="widget-head">
                <div class="pull-left">Editar recurso "{{form.vars.value.titulo}}"</div>
                <div class="clearfix"></div>
            </div>
            <div class="widget-content">
                <div class="padd">
                    <!-- Form starts.  -->
                    <form action="{{path('api_1_put_galeria',{'id':form.vars.value.id})}}" class="validate" id="formGalerias"  method="post" {{ form_enctype(form)}}>
                        <input name="_method" value="put" type="hidden"/>
                        {{form_widget(form)}}
                    </form>
                </div>
            </div>
            <div class="widget-foot">
                <button id="botonRegresar" class="btn btn-default">Regresar</button>
                <button id="botonGuardar" class="btn btn-primary">Guardar cambios</button>
                <div style="float: left; margin-right: 3px;">
                    <button id="botonEliminar" class="btn btn-danger">Eliminar</button>
                </div>        
            </div>
        </div>  
    </div>
</div>
