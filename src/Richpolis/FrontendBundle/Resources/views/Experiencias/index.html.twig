function iniciarlizarSorteable(){
    $("#cuerpoTabla").sortable({
        items: "tr",
        cursor: 'move',
        opacity: 0.6,
        update: function() {
            sendOrderToServer();
        }
    });
    $("#cuerpoTabla").disableSelection();
}

function sendOrderToServer() {
    debugger;
    $(".loader").fadeIn();
    var order = $("#cuerpoTabla").sortable('serialize');
    $.ajax({
       url: '{{path('experiencias_ordenar')}}?' + order,
       type: 'PATCH',
       data: order,
       dataType: 'json',
       success: function(data){
          debugger;
          noty({
                text: 'Actualizacion realizada',
                layout:'topRight',
                type:'success',
                timeout:2000
          });
          console.log(data);
          $(".loader").fadeOut();
       },
       error: function(data){
           debugger;
           noty({
                text: 'Error de actualizacion',
                layout:'topRight',
                type:'error',
                timeout:2000
            });
           console.log(data);
           $(".loader").fadeOut();
       },
    });
            
}
</script>

    
