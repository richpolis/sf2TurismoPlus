{% extends 'FrontendBundle::layout.html.twig' %}

{% block stylesheets %}
    {{  parent()  }}
    <link rel="stylesheet" href="{{asset('css/bootstrap-datetimepicker.min.css')}}">
    <style>
        .dtpicker{
            max-width:120px;
            display:inline-block;
        }
    </style>
{% endblock %}


{% block extra_header %}
    <div class="container-extra-header" style="height:90px;">
    </div>
{% endblock %}

{% block contenido %}

    {% if error is not defined %}
        {% set error=false %}
    {% endif %}
    {% if ok is not defined %}
        {% set ok=false %}
    {% endif %}
    {% if mensaje is not defined %}
        {% set mensaje="" %}
    {% endif %}
    
    <article class="cotizador">
        <h3>{{"Cotizador en linea"|trans}}</h3>
        <hr>
        <form action="#" class="form-horizontal" role="form"  method="post" >
            <div class="form-group">
                <label class="col-lg-2 control-label">{{"nombre"|trans}}</label>
                <div class="col-lg-8">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control','placeholder':'nombre'|trans }}) }}
                    <span class="errores"> 
                        {{ form_errors(form.name) }}
                    </span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">{{"telefono"|trans}}</label>
                <div class="col-lg-8">
                    {{ form_widget(form.telefono, {'attr': {'class': 'form-control','placeholder':'telefono'|trans }}) }}
                    <span class="errores"> 
                        {{ form_errors(form.telefono) }}
                    </span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">{{"email"|trans}}</label>
                <div class="col-lg-8">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder':'email'|trans }}) }}
                    <span class="errores"> 
                        {{ form_errors(form.email) }}
                    </span>
                </div>
            </div>        
            <hr/>
            <fieldset>
                <legend>{{"Origen"|trans}}</legend>
                <div class="form-group">
                    <label class="col-lg-2 control-label">{{"salida"|trans}}</label>
                    <div class="col-lg-8">
                        {{ form_widget(form.salida, {'attr': {'class': 'form-control','placeholder':'salida'|trans }}) }}
                        <span class="errores"> 
                            {{ form_errors(form.salida) }}
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">{{"fecha"|trans}}</label>
                    <div class="fecha-salida input-append col-lg-4">
                        {{ form_widget(form.fechaSalida, {'attr': {'class': 'form-control dtpicker','placeholder':'fecha'|trans ,'data-format': "yyyy-MM-dd"}}) }}
                        <span class="add-on">
                            <i data-time-icon="fa fa-time" data-date-icon="fa fa-calendar" class="btn btn-info"></i>
                        </span>
                        <span class="errores"> 
                            {{ form_errors(form.fechaSalida) }}
                        </span>
                    </div>
                </div>        
                <div class="form-group">
                    <label class="col-lg-2 control-label">{{"hora"|trans}}</label>
                    <div class="hora-salida input-append col-lg-4">
                        {{ form_widget(form.horaSalida, {'attr': {'class': 'form-control dtpicker','placeholder':'hora'|trans ,'data-format': "hh:mm:ss"}}) }}
                        <span class="add-on">
                            <i data-time-icon="fa fa-clock-o" data-date-icon="fa fa-calendar" class="btn btn-info"></i>
                        </span>
                        <span class="errores"> 
                            {{ form_errors(form.horaSalida) }}
                        </span>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>{{"Regreso"|trans}}</legend>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">{{"fecha"|trans}}</label>
                            <div class="fecha-salida input-append col-lg-4">
                                {{ form_widget(form.fechaRegreso, {'attr': {'class': 'form-control dtpicker','placeholder':'fecha'|trans ,'data-format': "yyyy-MM-dd"}}) }}
                                <span class="add-on">
                                    <i data-time-icon="fa fa-time" data-date-icon="fa fa-calendar" class="btn btn-info"></i>
                                </span>
                                <span class="errores"> 
                                    {{ form_errors(form.fechaRegreso) }}
                                </span>
                            </div>
                        </div>        
                        <div class="form-group">
                            <label class="col-lg-2 control-label">{{"hora"|trans}}</label>
                            <div class="hora-salida input-append col-lg-4">
                                {{ form_widget(form.horaRegreso, {'attr': {'class': 'form-control dtpicker','placeholder':'hora'|trans ,'data-format': "hh:mm:ss"}}) }}
                                <span class="add-on">
                                    <i data-time-icon="fa fa-clock-o" data-date-icon="fa fa-calendar" class="btn btn-info"></i>
                                </span>
                                <span class="errores"> 
                                    {{ form_errors(form.horaRegreso) }}
                                </span>
                            </div>
                        </div>
            </fieldset>
            <hr/>
            <div class="form-group">
                <label class="col-lg-2 control-label">{{"comentarios"|trans}}</label>
                <div class="col-lg-8">
                    {{ form_widget(form.comentarios, {'attr': {'class': 'form-control','placeholder':'comentarios'|trans }}) }}
                    <span class="errores"> 
                        {{ form_errors(form.comentarios) }}
                    </span>
                </div>
            </div>
            <div class="form-group">
                <input type="button" class="btn btn-info" style="padding: 5px 40px; float: right; margin-right: 200px; font-size: 18px;" value="{{"Enviar"|trans}}"/>
            </div>
            {% if ok == true and error == false%}    
            <div class="form-response-output form-mail-sent-ok">
                {{mensaje}}
            </div>
            {% elseif ok == false and error == true %}
            <div class="form-response-output form-mail-sent-ng form-validation-errors">
                {{mensaje}}{{form_errors(form)}}
            </div>    
            {% else %}
            <div class="form-response-output">
                {{mensaje}}
            </div>    
            {% endif %}    
            {{ form_rest(form) }} 
        </form>    
    </article>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="{{asset('js/bootstrap-datetimepicker.min.js')}}"></script>
<script src="{{asset('js/main.js')}}"></script>
<script>
$(function() {
    $('.fecha-salida, .fecha-regreso').datetimepicker({
        pickTime: false
    });
    $('.hora-salida, .hora-regreso').datetimepicker({
        pickDate: false
    });
    iniciarlizarFormCotizador();
});
</script>
{% endblock %}
