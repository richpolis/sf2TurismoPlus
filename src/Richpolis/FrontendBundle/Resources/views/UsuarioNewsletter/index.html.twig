<script>
var editarRegistro = function(url){
        location.href=url;
};

var activarRegistro = function(url,id){
  $.ajax({
     url: url,
     type: 'PATCH',
     data: {isActive: 1},
     dataType: 'html',
     success: function(data){
         debugger;
         $(id).html(data);
         noty({
            text: 'Activación realizada',
            layout:'topRight',
            type:'success',
            timeout:2000
        });
     },
     error: function(data){
         console.log(data);
     },
  });  
};

var inactivarRegistro = function(url,id){
  $.ajax({
     url: url,
     type: 'PATCH',
     data: {isActive: 0},
     dataType: 'html',
     success: function(data){
         debugger;
         $(id).html(data);
         noty({
            text: 'Inactivación realizada',
            layout:'topRight',
            type:'success',
            timeout:2000
        });
     },
     error: function(data){
         console.log(data);
     },
  });  
};

