<script>
$(document).ready(function() {
    window.api = {
      url: '{{path('api_1_get_galerias')}}',
      publicacion: 0,
      usuario: 0,
      tipos: {
          {% for key, value in tipos %}
            '{{value}}':{{key}},
          {% endfor %}
      },
      accion: {
          guardar: false,
          eliminar: false,
          up: false,
          down: false,
      },
      modelo: {
        id: 0,
        registro: "",
        
      },
    };
    $(".loader").fadeIn();
    window.routers.app = new Galerias.Routers.App();
    window.collections.galerias = new Galerias.Collections.Galerias();
    window.collections.galerias.url=window.api.url;
    var xhr = window.collections.galerias.fetch();
    xhr.done(function(){
        $(".loader").fadeOut();
        Backbone.history.start({
            root : '/',
            pushState:false
        });
    });
});
</script>
