{# editar usuario #}
<div class="row">
    <div class="col-md-12">
        <div class="widget">
            <div class="widget-head">
                <div class="pull-left">Editar usuario "{{form.vars.value.username}}"</div>
                <div class="clearfix"></div>
            </div>
            <div class="widget-content">
                <div class="padd">
                    <!-- Form starts.  -->
                    <form action="{{path('api_1_put_usuario',{'id':form.vars.value.id})}}" class="validate" id="formUsuarios"  method="post" {{ form_enctype(form)}}>
                        <input name="_method" value="put" type="hidden"/>
                        {{form_widget(form)}}
                    </form>
                    <br/>
                    {% if form.vars.value.imagen|length > 0 %}
                     <img src="/uploads/usuarios/{{form.vars.value.imagen}}" style="max-width: 200px;"/>
                    {% endif %}
                </div>
            </div>
            <div class="widget-foot">
                <button id="botonRegresar" class="btn btn-default">Regresar</button>
                <button id="botonGuardar" class="btn btn-primary">Guardar cambios</button>
                <div style="float: left; margin-right: 3px;">
                    <button id="botonEliminar" class="btn btn-danger">Eliminar</button>
                </div>        
            </div>
        </div>  
    </div>
</div>
