{% block mainbar %}
    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left">Configuraciones</h2>
            <div class="clearfix"></div>
            <!-- Breadcrumb -->
            <div class="bread-crumb">
                <a href="{{path('backend_homepage')}}"><i class="fa fa-home"></i>Dashboard</a--> 
                    <Divider>
                        <span class="divider">/</span> 
                        <a href="{{path('configuraciones')}}" class="bread-current">Configuraciones</a>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <a href="{{path('configuraciones_new')}}" class="btn btn-info pull-right" style="color: white; margin-left: 5px;">Crear configuracion</a>
                        {% endif %}
                        </div>

                        <div class="clearfix"></div>

                        </div>
                        <!-- Page heading ends -->

                        <!-- Matter -->

                        <div class="matter">
                            <div class="container" id="contenidoPagina">
                                <div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="widget">
                                                <div class="widget-head">
                                                    <div class="pull-left">{{entity.configuracion}}</div>
                                                    <div class="clearfix"></div>
                                                </div>

                                                <div class="widget-content">
                                                    <div class="padd">
                                                        <table>
                                                            <tbody><tr>
                                                                    <td>Id:</td>
                                                                    <td>{{entity.id}}</td>
                                                                </tr>
                                                                <tr>
                                                                    <td>Configuracion:</td>
                                                                    <td>{{entity.configuracion}}</td>
                                                                </tr>
                                                                <tr>
                                                                    <td>Tipo:</td>
                                                                    <td>{{ entity.stringtipoconfiguracion }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <td>Contenido:</td>
                                                                    <td>
                                                                        {% if entity.isImagen %}
                                                                            <img src="{{ entity.webPath }}" style="max-width: 100px;"/>
                                                                        {% else %}    
                                                                            {{ entity.texto | raw }}
                                                                        {% endif %}
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td>Activo?:</td>
                                                                    <td>
                                                                        {% if entity.isActive %}
                                                                            <i class="fa fa-check-circle"></i>
                                                                        {% else %}
                                                                            <i class="fa fa-circle"></i>
                                                                        {% endif %}
                                                                    </td>
                                                                </tr>
                                                                
                                                            </tbody>
                                                        </table>    
                                                    </div>
                                                </div>
                                                <div class="widget-foot">
                                                    <button id="botonRegresar" class="btn btn-default" onclick="javascript:regresar('{{path('configuraciones')}}')">Regresar</button>
                                                    <button id="botonEditar" class="btn btn-info" onclick="javascript:editarRegistro('{{path('configuraciones_edit',{id: entity.id})}}')">Editar</button>
                                                    <div style="float: left; margin-right: 3px;">
                                                        <form id="formEliminar" action="{{ path('configuraciones_delete', { 'id': entity.id }) }}" method="post">
                                                            {{ form_widget(delete_form) }}
														</form>
														<button class="btn btn-danger " onclick="eliminarRegistro();">Eliminar</button>
                                                    </div>        
                                                </div>
                                            </div>  
                                        </div>    
                                    </div>
                                </div>
                            </div>
                        </div>

    <!-- Matter ends -->

    </div>

    <!-- Mainbar ends -->        
    <div class="clearfix"></div>

{% endblock %}

