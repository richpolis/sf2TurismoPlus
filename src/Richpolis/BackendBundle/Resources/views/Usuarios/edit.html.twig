<script>
$(document).ready(function(){   
  $(".validate").validationEngine();

  $("#botonRegresar").on("click",function(){
    location.href="{{path('users')}}";
  });
  
  $("#botonGuardar").on("click",function(){
    $("#formUsuarios").submit();
  });
  
  {% if errores | length > 0 %}
    {% for error in errores %}
       noty({
          text: '{{ error }}',
          layout:'topRight',
          type:'error',
          timeout:2000
      }); 
    {% endfor %}    
  {% endif %}
  
});

</script>
   
{% endblock %}
