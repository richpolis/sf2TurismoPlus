{% block mainbar %}
<!-- Main bar -->
<div class="mainbar">

    <!-- Page heading -->
    <div class="page-head">
        <h2 class="pull-left">Tours</h2>
        <div class="clearfix"></div>
        <!-- Breadcrumb -->
        <div class="bread-crumb">
            <a href="{{path('users')}}"><i class="fa fa-home"></i>Usuarios</a> 
            <!-- Divider -->
            <span class="divider">/</span> 
            <a href="{{path('users_edit',{'id':entity.id})}}" class="bread-current">Editar usuario</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <!-- Page heading ends -->

    <!-- Matter -->
    <div class="matter">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="widget">

                        <div class="widget-head">
                            <div class="pull-left">Editar usuario "{{entity.username}}"</div>
                            <!--div class="widget-icons pull-right">
                                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                <a href="#" class="wsettings"><i class="fa fa-wrench"></i></a>  
                                <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                            </div-->
                            <div class="clearfix"></div>
                        </div>

                        <div class="widget-content">
                            <div class="padd">
                                <!-- Form starts.  -->
                                <form action="{{path('users_update',{'id':entity.id})}}" class="validate" id="formUsuarios"  method="post" {{ form_enctype(form)}}>
                                    <input name="_method" value="put" type="hidden"/>
                                    {{form_widget(form)}}
                                </form>
                            </div>
                        </div>
                        <div class="widget-foot">
                            <button id="botonRegresar" class="btn btn-default">Regresar</button>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <button id="botonGuardar" class="btn btn-primary">Guardar cambios</button>
                            <div style="float: left; margin-right: 3px;">
                            {{form_widget(delete_form)}}
                            </div>        
                            {% endif %}
                        </div>
                    </div>  

                </div>
            </div>
        </div>
    </div>
    <!-- Matter ends -->
</div>
<!-- Mainbar ends -->	    	
<div class="clearfix"></div>
{% endblock %}

